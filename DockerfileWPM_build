FROM sagcr.azurecr.io/webmethods-microservicesruntime:10.15.0.10-ubi


RUN yum update -y && \
    yum install -y wget unzip && \
    yum clean all

# Download the zip file using wget
RUN wget https://softwareag-usa.s3.amazonaws.com/webMethods/Service+Designer/wpm.zip

# Unzip the downloaded file
RUN unzip wpm.zip -d /opt/softwareag/wpm

# Set the PATH environment variable (if needed)
ENV PATH=/opt/softwareag/wpm/bin:$PATH

# Clean up by removing the downloaded zip file
RUN rm wpm.zip


